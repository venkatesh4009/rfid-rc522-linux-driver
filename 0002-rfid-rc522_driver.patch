+void SetBitMask(unsigned char reg,unsigned char mask)  
+{
+	char tmp = 0x0;
+	tmp = ReadRawRC(reg);
+	WriteRawRC(reg,tmp | mask);  // set bit mask
+}
+
+
+void ClearBitMask(unsigned char reg,unsigned char mask)  
+{
+	char tmp = 0x0;
+	tmp = ReadRawRC(reg);
+	WriteRawRC(reg, tmp & ~mask);  // clear bit mask
+} 
