+	CLR_SPI_CS;
+	ucAddr = ((Address<<1)&0x7E);
+
+	spi_message_init( &msg );
+	memset( st, 0, sizeof(st) );
+
+	st[ 0 ].tx_buf = &ucAddr;  
+	st[ 0 ].len = 1;  
+	spi_message_add_tail( &st[0], &msg );  
+
+	st[ 1 ].tx_buf = &value;  
+	st[ 1 ].len = 1;  
+	spi_message_add_tail( &st[1], &msg );  
+	spi_sync( rc522_spi, &msg );
+
+	SET_SPI_CS;
+}
